{
  "index": {
    "analysis": {
      "analyzer": {
        "korean_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer"
        },
        "korean_synonym_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["my_synonym_filter"]
        },
        "ingredient_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["lowercase"]
        }
      },
      "filter": {
        "my_synonym_filter": {
          "type": "synonym",
          "synonyms": [
            "닭가슴살, 치킨 브레스트",
            "구운계란, 삶은계란, 계란",
            "샐러드, salad"
          ]
        }
      }
    }
  }
}